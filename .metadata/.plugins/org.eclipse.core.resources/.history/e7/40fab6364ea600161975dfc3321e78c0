package co.kr.jaejoo.pcClient;

public class MainProcess {

	// 로그인
	UserLoginClient loginClient;
	// 회원가입
	UserJoinClient joinClient;
	// main controller
	UserMainClient mainClient;

	public static void main(String[] args) {
		MainProcess main = new MainProcess();
		System.out.println(main.loginClient);
		System.out.println(main.joinClient);
		if (main.loginClient == null) {
			System.out.println(main.loginClient);
			main.loginClient = new UserLoginClient();
			main.loginClient.setMain(main);
		} else if (main.joinClient.hasFocus()) {
			System.out.println(main.joinClient);
			main.joinClient = new UserJoinClient();
			main.joinClient.setMain(main);
		}

	}

	public void mainFrame() {
		loginClient.dispose();
		System.out.println("로그인성공");
		this.mainClient = new UserMainClient();
	}

	public void joinFrame() {
		loginClient.dispose();
		System.out.println("회원가입");
		this.joinClient = new UserJoinClient();
	}

	public void loginFrame() {
		joinClient.dispose();
		System.out.println("로그인 화면으로 되돌아갑니다.");
		this.loginClient = new UserLoginClient();
	}
}

package co.kr.jaejoo.servlet;

import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;

import javax.servlet.ServletConfig;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.google.gson.Gson;

import co.kr.jaejoo.model.ReqSignUp;
import co.kr.jaejoo.singleton.MakeConnection;

@WebServlet(name = "memberJoinDao", description = "멤버 회원가입용 dao", urlPatterns = { "/memberJoinDao" })
public class MemberJoinDao extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
	Connection conn;
	StringBuffer sb = new StringBuffer();
	PreparedStatement pstmt; 
	
    public MemberJoinDao() {
        super();
        // 여기서 singleton연결을 시도해야하는가??
        
    }
    
    
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// doPost방식은 먼저 doGet을 거쳐서 들어간다.
		response.getWriter().append("Served at: ").append(request.getContextPath());
		conn = MakeConnection.getInstance().getConnection();
		// json을 사용하기위함
		String json = sb.toString();
		Gson gson = new Gson();
		ReqSignUp signUp = gson.fromJson(json, ReqSignUp.class);
		
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

		doGet(request, response);
		
		
	}

}

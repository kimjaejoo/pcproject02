package co.kr.jaejoo.pcClient;


import java.awt.Dimension;
import java.awt.Toolkit;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

import javax.accessibility.AccessibleAction;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JPasswordField;
import javax.swing.JTextField;

@SuppressWarnings("serial")
public class UserJoinClient extends JFrame implements ActionListener {

	public static void main(String[] args) {
		new UserJoinClient();
	}
	
	JPanel joinPanel = new JPanel();

	Pattern patternEmail, patternId, patternTel;
	Matcher matcherEmail, matcherId, matcherTel;

	// 회원가입
	JTextField joinEmail, joinTel, joinName;
	JLabel email, tel, name, password;
	JPasswordField joinPw;

	// 이메일, 전화번호를 사용하기위한 정규표현식
	String emailregex = "[0-9a-zA-Z]+(.[_a-z0-9-]+)*@(?:\\w+\\.)+\\w+$";
	String telregex = "^01(?:0|1|[6-9])(?:\\d{3}|\\d{4})\\d{4}$";

	
	public UserJoinClient() {

		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setTitle("사용자 회원가입 화면입니다");
		setLayout(null);
		joinPanel.setLayout(null);
		
		setSize(600, 900);
		joinPanel.setSize(600, 900);

		Dimension framesize = this.getSize();
		Dimension windowsize = Toolkit.getDefaultToolkit().getScreenSize();
		
		int width = (windowsize.width - framesize.width) / 2;
		int height = (windowsize.height - framesize.height) / 2;
		
		setLocation(width, height);
		joinPanel.setLocation(width, height);

		joinEmail = new JTextField();
		joinTel = new JTextField();
		joinName = new JTextField();
		joinPw = new JPasswordField();
		email = new JLabel("이메일");
		tel = new JLabel("전화번호");
		name = new JLabel("이름");
		password = new JLabel("비밀번호");

		joinEmail.setBounds(10, 100, 100, 30);
		joinPw.setBounds(10, 100, 100, 100);
		
		
		joinPanel.add(joinPw);
		joinPanel.add(joinEmail);
		add(joinPanel, "joinPanel");
		
		setVisible(true);
	}


	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}
}
